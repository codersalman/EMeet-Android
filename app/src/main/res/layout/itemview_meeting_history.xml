<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:leftEdgeSwipeOffset="0dp"
            card_view:rightEdgeSwipeOffset="0dp">

            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="fill_parent" />
            <LinearLayout android:gravity="center|left" android:orientation="horizontal" android:id="@id/llMain" android:paddingLeft="12.0dip" android:paddingTop="16.0dip" android:paddingRight="12.0dip" android:paddingBottom="16.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
                <TextView android:textAppearance="@style/FontPath.Medium" android:textSize="15.0sp" android:textColor="@color/colorPrimary" android:gravity="center" android:id="@id/txtNameInitial" android:background="@drawable/ic_circle" android:visibility="gone" android:layout_width="40.0dip" android:layout_height="40.0dip" />


                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button"
                    android:src="@drawable/ic_history" />



                <LinearLayout
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtName"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Meet"
                        android:textAppearance="@style/FontPath.Medium"
                        android:textColor="@color/primaryText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:drawableTint="@color/secondaryText"

                        android:drawableLeft="@drawable/ic_schedule"
                        android:text="05-Jun"
                        android:textColor="@color/secondaryText"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/secondaryText"
                        android:drawableLeft="@drawable/ic_clock_black_24dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/secondaryText"
                        android:textSize="12sp" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnJoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:stateListAnimator="@null"
                    android:text="@string/rejoin"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="1.5dp" />

                <LinearLayout  android:gravity="center" android:id="@id/llDelete" android:layout_width="40.0dip" android:layout_height="40.0dip">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/button"
                        android:src="@drawable/ic_delete"
                        card_view:tint="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </com.daimajia.swipe.SwipeLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>













































































































































































