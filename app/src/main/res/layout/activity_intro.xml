<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity"
    android:orientation="vertical"
    android:background="@drawable/header">

    <RelativeLayout

        android:layout_width="400dp"
        android:layout_height="216dp"
        android:layout_weight="1"

        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="48dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Welcome To EduMeet"
                android:textColor="@color/white"
                android:textSize="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seg_ui_semibold"
                android:text="The Platform Of Online Learning"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="584dp"
        android:layout_weight="3"
        android:background="@drawable/card_background"
        android:elevation="36dp">

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:rotation="180"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/ivLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivLogo"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/igbgft"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignParentBottom="true"
            android:rotation="180"
            android:scaleType="fitXY"
            android:src="@drawable/header"
            app:layout_constraintBottom_toBottomOf="parent" />


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="388dp"
            android:layout_height="321dp"

            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/igbgft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.384" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/circleIndicator"
            android:layout_width="390dp"
            android:layout_height="20dp"
            android:visibility="visible"
            app:ci_drawable="@drawable/ellipse_1"
            app:ci_drawable_unselected="@drawable/ic_circle_deselected"
            app:layout_constraintBottom_toTopOf="@+id/igbgft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPager" />


        <com.google.android.material.button.MaterialButton
            android:id="@id/btnJoin"
            android:layout_width="271dp"
            android:layout_height="56dp"
            android:elevation="8.0dip"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="@string/join_a_meeting"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="15.0sp"
            app:backgroundTint="@color/white"
            app:cornerRadius="8.0dip"
            app:layout_constraintBottom_toBottomOf="@+id/igbgft"
            app:layout_constraintEnd_toEndOf="@+id/igbgft"
            app:layout_constraintStart_toStartOf="@+id/igbgft"
            app:layout_constraintTop_toBottomOf="@+id/circleIndicator"
            app:layout_constraintVertical_bias="0.839"
            app:rippleColor="@color/colorPrimaryTrans" />

        <com.google.android.material.button.MaterialButton
            android:id="@id/btnSignUp"
            android:layout_width="268dp"
            android:layout_height="56dp"
            android:elevation="8.0dip"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="@string/signup"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15.0sp"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="8.0dip"
            app:elevation="0.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/igbgft"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="@+id/igbgft"
            app:layout_constraintTop_toTopOf="@+id/igbgft"
            app:layout_constraintVertical_bias="0.146"
            app:rippleColor="@color/colorPrimaryRipple" />

        <com.google.android.material.button.MaterialButton
            android:id="@id/btnLogin"
            android:layout_width="270dp"
            android:layout_height="56dp"
            android:elevation="8.0dip"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="Login"

            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15.0sp"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="8.0dip"
            app:elevation="0.0dip"
            app:layout_constraintBottom_toTopOf="@+id/btnJoin"
            app:layout_constraintEnd_toEndOf="@+id/igbgft"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="@color/colorPrimaryRipple" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>